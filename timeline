//timeline style
.timel {  
  display: none; 
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: flex-start;
  padding: 25px; }
.timel .timeline {
    position: relative;
    max-width: 1200px;
    margin: 0 auto; }
/* The actual timeline (the vertical ruler) */
.timel .timeline::after {
    content: '';
    position: absolute;
    width: 6px;
    background-color: crimson;
    top: 0;
    bottom: 0;
    left: 50%;
    margin-left: -3px; }
/* Container around content */
.timel .timeline .container {
    padding: 25px;
    position: relative;
    background-color: inherit;
    width: 100%; }
/* Place the container to the left */
.timel .timeline .left {
    left: -50%; }
/* Place the container to the right */
.timel .timeline .right {
    left: 50%; }    
/* The circles on the timeline */
.timel .timeline .container::after {
    content: '';
    position: absolute;
    width: 25px;
    height: 25px;
    right: -15px;
    background-color: white;
    border: 2px dashed black;
    top: 15px;
    border-radius: 50%;
    z-index: 1; }
/* Add arrows to the left container (pointing right) 
.left::before {
    content: " ";
    height: 0;
    position: absolute;
    top: 22px;
    width: 0;
    z-index: 1;
    right: 30px;
    border: medium solid black;
    border-width: 10px 0 10px 10px;
    border-color: transparent transparent transparent white; }
.right::before {
    content: " ";
    height: 0;
    position: absolute;
    top: 22px;
    width: 0;
    z-index: 1;
    left: 30px;
    border: medium solid black;
    border-width: 10px 10px 10px 0;
    border-color: transparent white transparent transparent; }*/
/* Fix the circle for containers on the right side */
.timel .timeline .right::after {
    left: -15px; }    
.timel .timeline .container .content {
    padding: 25px;
    background-color: white;
    position: relative;
    border: 2px solid white;
    border-bottom-right-radius: 10%;
    border-bottom-left-radius: 10%; }   
.timel .timeline .container .content:hover { 
  border: 2px solid black; }
.timel .timeline .container .content button { 
  display: inline-block; 
  border-bottom: 2px solid white;
  font-size: 17px; }
.timel .timeline .container .content button:hover { 
  border-bottom: 2px solid black; 
  cursor: pointer; }

