// timeline js code
// function for versions
function version(ele)
{
  var x = ele;
  if (x.id == 'v1') 
  {
    document.getElementById('body').style.display = "none";
    location.href = "version1January.html";
  }
  else if (x.id == 'v2') 
  {
    document.getElementById('body').style.display = "none";
    location.href = "version2February.html";
  }
  else
  {
    alert("This is the latest version!!!");
  }
}
  
